@model ContactBook.BusinessLayer.ViewModels.LoginViewModel

@{ ViewBag.Title = "Login";Layout = "~/Views/Shared/_Layout.cshtml";}

<h2 class="text-primary">Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
            </div>
            <div class="col-md-7">
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "txtPassword" })
            </div>
            <div class="col-md-7">
                @Html.ValidationMessageFor(model => model.Password)
                @Html.CheckBox("ShowPassword", new { @id = "chkShowPassword" })
                @Html.Label("Show Password")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.CheckBoxFor(model => model.RememberMe)
                @Html.LabelFor(model => model.RememberMe, new { @class = "control-label" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        $("#chkShowPassword").click(function () {
            $("#txtPassword").attr("type", $(this).is(":checked") ? "text" : "password");
        });


    });
</script>

